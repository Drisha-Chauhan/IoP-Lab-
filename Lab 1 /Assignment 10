#include<stdio.h>
int main()
{
	int m,p,c,e,CM; //declaring variables

	printf("Enter marks obtained in Maths: \n"); //user input 
	scanf("%d",&m);
	
	printf("Enter marks obtained in Physics: \n");
	scanf("%d",&p);
	
	printf("Enter marks obtained in Chemistry: \n");
	scanf("%d",&c);
	
	printf("Enter marks obtained in Entrance Examination: \n");
	scanf("%d",&e);
	
	m<=200&&m>=0; p<=200&&p>=0; c<=200&&c>=0; e<=100&&e>=0; //setting range for the marks entered
	
	CM= m/2+p/2+c/2+e;
	
	//displaying results
	
	printf("The cutoff marks are: %d \n",CM);
	
	return 0;
	
	
	
	
	
}
