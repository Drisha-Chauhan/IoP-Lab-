#include<stdio.h>
int main()
{
	int a[10],b[10],c[10];
	
	printf("Enter the values of the array a: \n");
	
	for (int i=0;i<10;i++)
	{
		scanf("%d",&a[i]);
	}
	
	printf("Enter the values of the array b: \n");
	
	for (int i=0;i<10;i++)
	{
		scanf("%d",&b[i]);
	}
	
	for (int i=0;i<10;i++)
	{
		c[i]=a[i];
		a[i]=b[i];
		b[i]=c[i];
	}
	
	printf("The updated array a is: \n");
	
	for (int i=0;i<10;i++)
	{
		printf("%d\n",a[i]);
	}
	
	printf("The updated array b is: \n");
	
	for (int i=0;i<10;i++)
	{
		printf("%d\n",b[i]);
	}
	
	return 0;
	
}

