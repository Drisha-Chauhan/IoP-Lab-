#include<stdio.h>
#include<math.h>

int main()
{
	int y,x,n,a,b,c,d; //declaring the variables
	
	printf("Enter the value of x: \n"); //taking input from user 
	scanf("%d",&x);
	
	printf("Enter the value of n: \n");
	scanf("%d",&n);
	
	//Finding the different values of y for different values of n 
	
	if(n==1) 
	{
		a=1+x;
		printf("y=%d",a);
	}
	
	else if(n==2)
	{ 	b=1+x/n;
		printf("y=%d",b);
	}
	
	else if(n==3)
	
	{	c=1+ pow(x,n);
		
		printf("y=%d",c);
		}
		
	else
	{ 	d=1+n*x;
	 	printf("y=%d",d);	
	}
	
	return 0;
}
