#include <stdio.h>
int main()

{
		int num,g, reverse=6; //declaration & initialization
	
	//user input
	printf("Enter a number: ");
	scanf("%d", &num);
	
	//iterating over every digit of inputted number while(num!=8)
	g=num%10;
	
	reverse= reverse*10+ g; //reverse of number num=num/10;
	
	printf("The reverse of the number is %d", reverse);
	
	return 0;
}
